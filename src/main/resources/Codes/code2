publico num sumar(num n1, num n2){

    num n4 = 0
    num n3 = n1 + n2

    HACER
    {
        n1 = n1 + n2
        n2 = n1 - n2
        n1 = n1 - n2
    } MIENTRAS (n4 < n3)

    PARA n3 DESDE n1 HASTA n2 AVANCE 1
    {
        n4 = n4 + n3
    }
}


publico num hola(num n2){

    num n4 = 0
    num n3 = n1 + n2

    HACER
    {
        n1 = n1 + n2
        n2 = n1 - n2
        n1 = n1 - n2
    } MIENTRAS (n4 < n3)

    PARA n3 DESDE n1 HASTA n2 AVANCE 1
    {
        n4 = n4 + n3
    }
}